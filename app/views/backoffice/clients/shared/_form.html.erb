<h1 class="page-header"><%= t('labels.client') %></h1>

<% if @client.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

    <ul>
      <% @client.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <%= action %>
      </div>

      <div class="panel-body">
        <div class="col-lg-6">
          <%= form_for([:backoffice, @client]) do |f| %>
            <div class="form-group">
              <label><%= t('labels.name') %></label>
              <%= f.text_field :name, class:"form-control", autofocus:"autofocus",
              placeholder:"Supermercado XZ" %>
            </div>

            <button type="submit" class="btn btn-primary"><%= t('buttons.save') %></button>

            <%= link_to backoffice_clients_path,
              class:"btn btn-outline btn-danger" do%>
              <%= t('buttons.cancel') %>
            <% end %>
          <% end %>

        </div>
      </div>

      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
