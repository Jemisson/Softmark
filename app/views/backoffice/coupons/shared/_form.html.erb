<h1 class="page-header"><%= t('labels.coupon') %></h1>

<% if @coupon.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

    <ul>
      <% @coupon.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <%= action %>
      </div>

      <div class="panel-body">
        <div class="col-lg-6">
          <%= form_for([:backoffice, @coupon]) do |f| %>
            <div class="form-group">
              <label><%= t('labels.name') %></label>
              <%= f.text_field :name, class:"form-control", disabled:"disabled" %>
            </div>

            <div class="form-group">
              <label><%= t('labels.phone') %></label>
              <%= f.text_field :phone, class:"form-control", disabled:"disabled" %>
            </div>

            <div class="from-group">
              <div class="form-group">
                <%= f.label "Pendente", for:"pen" %>
                <%= f.radio_button :status, "0", :checked => true, id:"pen" %>
              </div>

              <div class="form-group">
                <%= f.label "Recebido", for:"rec"%>
                <%= f.radio_button :status, "1",id:"rec" %>
              </div>

            </div>

            <button type="submit" class="btn btn-primary"><%= t('buttons.save') %></button>

            <%= link_to backoffice_clients_path,
              class:"btn btn-outline btn-danger" do%>
              <%= t('buttons.cancel') %>
            <% end %>
          <% end %>

        </div>
      </div>

      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
