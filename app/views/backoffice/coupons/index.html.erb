<h1 class="page-header"><%= t('labels.coupons_discount') %></h1>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-heading">
                <%= t('labels.listing_coupon') %>
            </div>

            <div class="panel-body">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                  <div class="row">
                    <div class="col-sm-12">

                      <table width="100%"
                      class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
                      id="indexTable">

                        <thead>
                          <tr role="row">
                            <th class="sorting_asc">#</th>
                            <th class="sorting_asc"><%= t('labels.name') %></th>
                            <th class="sorting_asc"><%= t('labels.phone') %></th>
                            <th class="sorting_asc"><%= t('labels.status') %></th>
                            <th><%= t('labels.download') %></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @coupons.each do |cp|%>
                            <tr class="gradeA odd" role="row">
                              <td class="sorting_1"><%= cp.id%></td>
                              <td><%= cp.name%></td>
                              <td><%= cp.phone%></td>
                              <% if cp.status == 1 %>
                                <td>Recebido</td>
                              <% else %>
                                <td>Pendente</td>
                              <% end %>
                              <td class="option-btn">
                                <%= link_to edit_backoffice_coupon_path(cp),
                                class:"btn btn-primary btn-circle" do%>
                                <i class="fa fa-edit"></i>
                                <% end %>
                                <!-- <button type="button"
                                class="btn btn-danger btn-circle">
                                  <i class="fa fa-times"></i>
                                </button> -->
                              </td>
                            </tr>
                          <% end %>
                        </tbody>

                      </table>

                    </div>
                  </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- FIM DATA TABLE -->
