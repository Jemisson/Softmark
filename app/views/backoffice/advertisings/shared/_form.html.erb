<h1 class="page-header"><%= t('labels.advertising') %></h1>

<% if @advertising.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
      <% @advertising.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <%= action %>
      </div>

      <div class="panel-body">
        <div class="col-lg-6">
          <%= form_for([:backoffice, @advertising]) do |f| %>

            <div class="form-group">
              <label><%= t('labels.client') %></label>
              <%= f.text_field :client, class:"form-control",
              placeholder:"João da Silva" %>
            </div>

            <div class="row">
              <div class="col-lg-5">
                <div class="form-group">
                  <label><%= t('labels.startDate') %></label>
                  <%= f.text_field :start_date, class:"form-control datepicker" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-5">
                <div class="form-group">
                  <label><%= t('labels.finishDate') %></label>
                  <%= f.text_field :end_date, class:"form-control datepicker" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-5">
                <div class="form-group">
                  <label><%= t('labels.category') %></label>
                  <%= collection_select(:advertising, :category_id, @categories_for_advertising, :id, :description) %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-5">
                <div class="form-group">
                  <label><%= t('labels.weather') %></label>
                  <%= collection_select(:advertising, :weather_id, @weather_for_advertising, :id, :description) %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label><%= t('labels.image') %></label>
              <img id="image_preview" src="<%= @advertising.picture.url %>" alt="image">
              <%= f.file_field :picture, id:"image_field" %>
            </div>

            <button type="submit" class="btn btn-primary"><%= t('buttons.save') %></button>

            <%= link_to backoffice_advertisings_path,
              class:"btn btn-outline btn-danger" do%>
              <%= t('buttons.cancel') %>
            <% end %>
          <% end %>

        </div>
      </div>

      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
