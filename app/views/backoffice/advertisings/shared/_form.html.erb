<h1 class="page-header"><%= t('labels.advertising') %></h1>

<% if @advertising.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
      <% @advertising.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <%= action %>
      </div>

      <div class="panel-body">
        <div class="col-lg-6">
          <%= form_for([:backoffice, @advertising]) do |f| %>

          <div class="form-group">
            <label><%= t('labels.client') %></label>
            <%= f.text_field :client, class:"form-control",
            placeholder:"Padaria Pão" %>
          </div>

          <div class="row">
            <div class="col-xs-4">
              <div class="form-group">
                <label><%= t('labels.finishDate') %></label>
                <%= f.text_field :finishDate, class:"form-control datepicker" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-4">
              <div class="form-group">
                <label><%= t('labels.startDate') %></label>
                <%= f.text_field :startDate, class:"form-control datepicker" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label><%= t('labels.category') %></label>

          </div>

          <div class="form-group">
            <label><%= t('labels.weather') %></label>

          </div>

          <div class="from-group">
            <%= f.label :status %>
            <%= f.collection_radio_buttons(:status, options_for_status, :id,
                                            :description) do |b| %>
              <div class="radio">
                <%= b.label {b.radio_button + b.text} %>
              </div>
            <% end %>
          </div>

          <button type="submit" class="btn btn-default">Salvar</button>
          <% end %>

        </div>
      </div>

      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
