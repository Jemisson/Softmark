<h1 class="page-header"><%= t('labels.advertising') %></h1>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-heading">
                <%= t('labels.listing_advertising') %>
                <%= link_to new_backoffice_advertising_path,
                class:"btn btn-success btn-success-adjust btn-circle pull-right" do%>
                <i class="fa fa-plus"></i>
                <% end %>
            </div>

            <div class="panel-body">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                  <div class="row">
                    <div class="col-sm-12">

                      <table width="100%"
                      class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
                      id="indexTable">

                        <thead>
                          <tr role="row">
                            <th class="sorting_asc">#</th>
                            <th class="sorting_asc"><%= t('labels.image') %></th>
                            <th class="sorting_asc"><%= t('labels.client') %></th>
                            <th class="sorting_asc"><%= t('labels.category') %></th>
                            <th class="sorting_asc"><%= t('labels.weather') %></th>
                            <th><%= t('labels.edit') %></th>
                            <th><%= t('labels.delete') %></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @advertisings.each do |advertising|%>
                            <tr class="gradeA odd" role="row">
                              <td class="sorting_1"><%= advertising.id%></td>
                              <td><%= image_tag advertising.picture.url(:thumb) %></td>
                              <td><%= advertising.client.name%></td>
                              <td><%= advertising.category.description%></td>
                              <td><%= advertising.weather.description%></td>

                              <td class="option-btn">
                                <%= link_to edit_backoffice_advertising_path(advertising),
                                  class:"btn btn-primary btn-circle" do%>
                                  <i class="fa fa-edit"></i>
                                <% end %>
                              </td>

                              <td class="option-btn">
                                <%= link_to backoffice_advertising_path(advertising),
                                    method: :delete, class:"btn btn-danger btn-circle",
                                    data:{confirm:t('messages.confirm_with',
                                    item: advertising.client)} do%>
                                  <i class="fa fa-times"></i>
                                <% end %>
                              </td>

                            </tr>
                          <% end %>
                        </tbody>

                      </table>

                    </div>
                  </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- FIM DATA TABLE -->
