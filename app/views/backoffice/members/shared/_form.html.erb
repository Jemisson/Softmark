<h1 class="page-header"><%= t('labels.user') %></h1>

<% if @member.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

    <ul>
      <% @member.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <%= action %>
      </div>

      <div class="panel-body">
        <div class="col-lg-6">
          <%= form_for([:backoffice, @member]) do |f| %>
            <div class="form-group">
              <label><%= t('labels.name') %></label>
              <%= f.text_field :name, class:"form-control",
              placeholder: t('placeholders.john') %>
            </div>

            <div class="form-group">
              <label><%= t('labels.email_address') %></label>
              <%= f.text_field :email, class:"form-control",
              placeholder:t('placeholders.email_address') %>
            </div>

            <div class="form-group">
              <label><%= t('labels.password') %></label>
              <%= f.password_field :password, class:"form-control",
              placeholder:t('placeholders.password') %>
            </div>

            <div class="form-group">
              <label><%= t('labels.password_confirmation') %></label>
              <%= f.password_field :password_confirmation, class:"form-control",
              placeholder:t("placeholders.confirm_password") %>
            </div>

            <button type="submit" class="btn btn-primary"><%= t('buttons.save') %></button>

            <%= link_to backoffice_members_path,
              class:"btn btn-outline btn-danger" do%>
              <%= t('buttons.cancel') %>
            <% end %>
          <% end %>

        </div>
      </div>

      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
