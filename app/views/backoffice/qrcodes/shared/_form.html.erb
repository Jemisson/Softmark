<h1 class="page-header"><%= t('labels.coupon_discount') %></h1>

<% if @qrcode.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

    <ul>
      <% @qrcode.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <%= action %>
      </div>

      <div class="panel-body">
        <div class="col-lg-6">
          <%= form_for([:backoffice, @qrcode]) do |f| %>

            <div class="form-group">
              <label><%= t('labels.client') %></label>
              <%= f.text_field :client, class:"form-control",
              placeholder: t('placeholders.john') %>
            </div>

            <div class="form-group">
              <label><%= t('labels.days_validity') %></label>
              <%= f.text_field :validity, class:"form-control",
              placeholder: '7' %>
            </div>

            <div class="form-group">
              <label><%= t('labels.value_discount_or_percent') %></label>
              <%= f.text_field :value, class:"form-control",
              placeholder: '10' %>
            </div>

            <div class="form-group">
              <label><%= t('labels.date_time') %></label>
              <%= f.text_field :date_time, class:"form-control", value:DateTime.now(),
              disabled:"disabled" %>
            </div>

            <button type="submit" class="btn btn-primary"><%= t('buttons.generate') %></button>

            <%= link_to backoffice_qrcodes_path,
              class:"btn btn-outline btn-danger" do%>
              <%= t('buttons.cancel') %>
            <% end %>
          <% end %>

        </div>
        <div class="col-lg-6">
          <div class="well qrcode-panel">

            <%= image_tag @img_show %>
            <%= link_to "download", backoffice_download_path %>


          </div>
        </div>
      </div>

      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
