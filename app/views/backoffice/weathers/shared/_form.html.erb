<h1 class="page-header">Clima / Tempo</h1>

<% if @weather.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
      <% @weather.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <%= action %>
      </div>

      <div class="panel-body">
        <div class="col-lg-6">
          <%= form_for([:backoffice, @weather]) do |f| %>
            <div class="form-group">
              <label>Descrição</label>
              <%= f.text_field :description, class:"form-control",
              placeholder:"Ensolarado" %>
            </div>

            <div class="form-group">
              <label>Temperatura Mínima</label>
              <%= f.text_field :min_temp, class:"form-control",
              placeholder:"30" %>
            </div>

            <div class="form-group">
              <label>Temperatura Máxima</label>
              <%= f.text_field :max_temp, class:"form-control",
              placeholder:"50" %>
            </div>

            <button type="submit" class="btn btn-primary"><%= t('buttons.save') %></button>

            <%= link_to backoffice_weathers_path,
              class:"btn btn-outline btn-danger" do%>
              <%= t('buttons.cancel') %>
            <% end %>
          <% end %>

        </div>
      </div>

      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
