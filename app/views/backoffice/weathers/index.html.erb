<h1 class="page-header"><%= t('labels.weather') %></h1>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-heading">
                <%= t('labels.listing_weather') %>
                <%= link_to new_backoffice_weather_path,
                class:"btn btn-success btn-success-adjust btn-circle pull-right" do%>
                <i class="fa fa-plus"></i>
                <% end %>
            </div>

            <div class="panel-body">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                  <div class="row">
                    <div class="col-sm-12">

                      <table width="100%"
                      class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
                      id="indexTable">

                        <thead>
                          <tr role="row">
                            <th class="sorting_asc">#</th>
                            <th class="sorting_asc"><%= t('labels.description') %></th>
                            <th class="sorting_asc"><%= t('labels.minTemp') %></th>
                            <th class="sorting_asc"><%= t('labels.maxTemp') %></th>
                            <th><%= t('labels.edit') %></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @weathers.each do |weather|%>
                            <tr class="gradeA odd" role="row">
                              <td class="sorting_1"><%= weather.id%></td>
                              <td><%= weather.description%></td>
                              <td><%= weather.minTemp%></td>
                              <td><%= weather.maxTemp%></td>
                              <td class="option-btn">
                                <%= link_to edit_backoffice_weather_path(weather),
                                class:"btn btn-primary btn-circle" do%>
                                <i class="fa fa-edit"></i>
                                <% end %>
                                <!-- <button type="button"
                                class="btn btn-danger btn-circle">
                                  <i class="fa fa-times"></i>
                                </button> -->
                              </td>
                            </tr>
                          <% end %>
                        </tbody>

                      </table>

                    </div>
                  </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- FIM DATA TABLE -->
